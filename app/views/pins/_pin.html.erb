<div id="<%= dom_id pin %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= pin.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= pin.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Latitude:</strong>
    <%= pin.latitude %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Float:</strong>
    <%= pin.float %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Longitude:</strong>
    <%= pin.longitude %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this pin", pin, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this pin', edit_pin_path(pin), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
